<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana2.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Sistema de Registro de Notas"
                HorizontalOptions="CenterAndExpand" />
            <Image Source="logo"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition>
                     
                    </RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition>
                        
                    </ColumnDefinition>
                </Grid.ColumnDefinitions>
                
                <Label Text="Ingrese el usuario" Grid.Row="0" Grid.Column="0"/>
               
                <Entry x:Name="txtUsuario" Placeholder="Ingrese usuario" Grid.Row="0" Grid.Column="1"></Entry>
                
                <Label Text="Ingrese la contrasena" Grid.Row="1" Grid.Column="0"/>
                
                <Entry x:Name="txtontrasena" Placeholder="Ingrese Contrasena" IsPassword="True" Grid.Row="1" Grid.Column="1"></Entry>
            </Grid>
            <Button x:Name="btnIniciar" Text="INICIAR SESION" Clicked="btnIniciar_Clicked"></Button>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>